<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationPage">


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-80dp"
        android:src="@drawable/undraw_secure_login_pdn42" />

    <TextView
        android:id="@+id/dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="Enter the verification code"
        android:textColor="@color/purple_500"
        android:textSize="24dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/dialog1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="425dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="We've just sent you a verification code via +880**********"
        android:textColor="@color/cardview_dark_background"
        android:textSize="16dp"/>

    <EditText
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="#81B6A9A9"
        android:drawableLeft="@drawable/ic_baseline_qr_code_24"
        android:drawablePadding="10dp"
        android:hint="Verification Code"
        android:padding="20dp"
        android:textColor="@color/cardview_dark_background"
        android:textColorHint="@color/cardview_dark_background" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resend"
        android:text="Resend Code"
        android:textColor="@color/cardview_dark_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resend"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/purple_500"
        android:text="Submit" />
</RelativeLayout>